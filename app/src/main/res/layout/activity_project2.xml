<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cc99">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">

        <include layout="@layout/layout_yogiyo_bottom_navigation" />
    </android.support.constraint.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/all"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/src1"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:hint="Search your Destinaton" />




        <TextView
            android:id="@+id/txt_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="525dp"
            android:textSize="22dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/bubblegum_sans"
            android:textColor="#000"
            android:text="Choose your destination in Jakarta with Us"/>

        <TextView
            android:id="@+id/txt_jrny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_open"
            android:textSize="22dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/bubblegum_sans"
            android:textColor="#000"
            android:text="Make your Journey and Memories"/>

        <TextView
            android:id="@+id/txt_jkrt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_below="@id/txt_jrny"
            android:textSize="22dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/bubblegum_sans"
            android:textColor="#000"
            android:text="Welcome to Jakarta"/>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/imageButton8"
                android:layout_width="109dp"
                android:layout_height="91dp"
                tools:layout_editor_absoluteX="231dp"
                tools:layout_editor_absoluteY="83dp"
                tools:srcCompat="@tools:sample/avatars[0]" />

            <ImageButton
                android:id="@+id/imageButton9"
                android:layout_width="117dp"
                android:layout_height="108dp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="232dp"
                tools:srcCompat="@tools:sample/avatars[5]" />

            <ImageButton
                android:id="@+id/imageButton10"
                android:layout_width="107dp"
                android:layout_height="106dp"
                tools:layout_editor_absoluteX="231dp"
                tools:layout_editor_absoluteY="232dp"
                tools:srcCompat="@tools:sample/avatars[14]"/>

            <ImageButton
                android:id="@+id/imageButton11"
                android:layout_width="125dp"
                android:layout_height="100dp"
                tools:layout_editor_absoluteX="30dp"
                tools:layout_editor_absoluteY="83dp"
                tools:srcCompat="@tools:sample/avatars[12]"/>

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                app:layout_constraintEnd_toEndOf="@+id/imageButton11"
                app:layout_constraintHorizontal_bias="0.318"
                app:layout_constraintStart_toStartOf="@+id/imageButton11"
                tools:layout_editor_absoluteY="193dp"/>

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                app:layout_constraintEnd_toEndOf="@+id/imageButton8"
                app:layout_constraintStart_toStartOf="@+id/imageButton8"
                tools:layout_editor_absoluteY="183dp" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="66dp"
                android:layout_height="12dp"
                android:text="TextView"
                app:layout_constraintEnd_toEndOf="@+id/imageButton9"
                app:layout_constraintHorizontal_bias="0.549"
                app:layout_constraintStart_toStartOf="@+id/imageButton9"
                tools:layout_editor_absoluteY="350dp" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                app:layout_constraintEnd_toEndOf="@+id/imageButton10"
                app:layout_constraintHorizontal_bias="0.52"
                app:layout_constraintStart_toStartOf="@+id/imageButton10"
                tools:layout_editor_absoluteY="343dp" />

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="goTestPage"
                android:onClick="goTestPage"
                tools:layout_editor_absoluteX="167dp"
                tools:layout_editor_absoluteY="403dp" />
        </android.support.constraint.ConstraintLayout>


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>